<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:layout_marginBottom="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_obat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:elevation="1dp"
        android:background="@color/colorPrimaryLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="vertical"
            android:background="@color/colorPrimaryLight">

            <ImageView
                android:id="@+id/iv_obat"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:src="@drawable/medicine"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_nama_obat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Obat"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_gravity="center"

                />
            <TextView
                android:id="@+id/tv_harga_obat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp xxxxxx"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                />
            <LinearLayout
                android:id="@+id/ly_buy"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/btn_pesan_obat"
                    android:layout_width="90dp"
                    android:layout_height="24dp"
                    android:background="@color/colorAccent"
                    android:textSize="12dp"
                    android:text="Beli"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_sum"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp">

                <ImageButton
                    android:id="@+id/btn_pesan_kurang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_buy_border"
                    android:gravity="center"
                    android:src="@drawable/ic_remove"
                    android:tint="@color/colorAccent"
                    android:text="Beli"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/jum_obat"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14dp"
                    android:focusable="false"
                    android:editable="false"
                    android:backgroundTint="@color/colorPrimaryLight"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    />
                <ImageButton
                    android:id="@+id/btn_pesan_tambah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_buy_border"
                    android:src="@drawable/ic_add"
                    android:tint="@color/colorAccent"
                    android:textSize="12dp"
                    android:text="Beli"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>